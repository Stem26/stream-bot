{
  "name": "twitch-service",
  "version": "1.0.0",
  "description": "Twitch бот с интеграцией Telegram",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "start:prod": "npm run build && cross-env NODE_ENV=production node dist/src/index.js",
    "dev": "nodemon",
    "nightbot:send": "ts-node src/scripts/nightbot-send.ts",
    "twitch:announcement:test": "ts-node src/scripts/announcement-test.ts",
    "twitch:token:check": "ts-node src/scripts/token-check.ts",
    "stream:notification:test": "ts-node src/scripts/stream-notification-test.ts",
    "eventsub:cleanup": "ts-node src/scripts/cleanup-eventsub.ts",
    "watch": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "keywords": [
    "twitch",
    "bot",
    "typescript",
    "telegram"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@twurple/api": "^8.0.3",
    "@twurple/auth": "^8.0.3",
    "@twurple/chat": "^8.0.3",
    "@twurple/eventsub-ws": "^8.0.3",
    "axios": "^1.6.7",
    "dotenv": "^16.4.5",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "telegraf": "^4.15.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/ui": "^4.0.18",
    "cross-env": "^10.1.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  }
}